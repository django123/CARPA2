<div class="authform">
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
      <h3>Sign up</h3>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.input :lName,required: true%>
      </div>
      <div class="form-group">
        <%= f.input :fName %>
      </div>
      <div class="form-group">
        <%= f.input :adress %>
      </div>
      <div class="form-group">
        <%= f.label :phone %>
        <%= f.number_field :phone, :autofocus => true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.input :registration_number %>
      </div>
      <div class="form-group">
        <%= f.input :email, placeholder: 'user@domain.com', required: true %>
      </div>
      <div class="form-group">
        <%= f.select :skin,User.skin.options %>
      </div>
      <div class="form-group">
        <%= f.input :password %>
      </div>
      <div class="form-group">
        <%= f.input :password_confirmation, class: 'form-control' %>
      </div>

      <%= f.submit 'Sign up', :class => 'button right btn btn-success' %>
  <% end %>
</div>
