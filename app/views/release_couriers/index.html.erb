<p id="notice"><%= notice %></p>

<h1>Release Couriers</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Destination</th>
      <th>Reference</th>
      <th>Ordernumber</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @release_couriers.each do |release_courier| %>
      <tr>
        <td><%= release_courier.date %></td>
        <td><%= release_courier.destination %></td>
        <td><%= release_courier.reference %></td>
        <td><%= release_courier.orderNumber %></td>
        <td><%= release_courier.user %></td>
        <td><%= link_to 'Show', release_courier %></td>
        <td><%= link_to 'Edit', edit_release_courier_path(release_courier) %></td>
        <td><%= link_to 'Destroy', release_courier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

