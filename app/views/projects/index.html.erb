<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Projet code</th>
      <th>Duration</th>
      <th>Amount</th>
      <th>Public partenership</th>
      <th>Private partenership</th>
      <th>Project situation</th>
      <th>Focal point</th>
      <th>Object project</th>
      <th>Procedure</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.projet_code %></td>
        <td><%= project.duration %></td>
        <td><%= project.amount %></td>
        <td><%= project.public_partenership %></td>
        <td><%= project.private_partenership %></td>
        <td><%= project.project_situation %></td>
        <td><%= project.focal_point %></td>
        <td><%= project.object_project %></td>
        <td><%= project.procedure %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

