
<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :projet_code %>
    <%= f.input :duration %>
    <%= f.input :amount %>
    <%= f.input :public_partenership %>
    <%= f.input :private_partenership %>
    <%= f.input :project_situation %>
    <%= f.input :focal_point %>
    <%= f.input :object_project %>
    <%= f.input :procedure %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
