<p id="notice"><%= notice %></p>

<h1>Couriers</h1>

<table>
  <thead>
    <tr>
      <th>Reference</th>
      <th>Subject</th>
      <th>Sender</th>
      <th>Receiver</th>
      <th>State</th>
      <th>Sentdate</th>
      <th>Receivedate</th>
      <th>Order number</th>
      <th>User</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @couriers.each do |courier| %>
      <tr>
        <td><%= courier.reference %></td>
        <td><%= courier.subject %></td>
        <td><%= courier.sender %></td>
        <td><%= courier.receiver %></td>
        <td><%= courier.state %></td>
        <td><%= courier.sentDate %></td>
        <td><%= courier.receiveDate %></td>
        <td><%= courier.order_number %></td>
        <td><%= courier.user %></td>
        <td><%= courier.project %></td>
        <td><%= link_to 'Show', courier %></td>
        <td><%= link_to 'Edit', edit_courier_path(courier) %></td>
        <td><%= link_to 'Destroy', courier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

